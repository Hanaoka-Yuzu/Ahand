/* pages/message/message.wxss */

page{/*页面背景—————统一浅灰*/
  background-color: #ededed;
}

.user{
  display: flex;
  background-color: white;
  text-align: left;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.userImg{
  display: flex;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.userNickName{
  display: flex;
  font-size: 18px;
  font-weight: bold;
  padding-left: 20rpx;
  width: 320px;
  height: 20px;
  line-height: 50px;
}

.friendInfo{
  background-color: #ededed;
  display: flex;
  text-align: left;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.friendImage{
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  margin-left: 5rpx;
  width: 90rpx;
  height: 90rpx;
}

.friendNickname{
  display: flex;
  font-size: 15px;
  font-weight: 500;
  padding-left: 20rpx;
  height: 20px;
  line-height: 45px;
}

.split-line{
  margin-left: 140rpx;
  background-color: gray;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.3);
}